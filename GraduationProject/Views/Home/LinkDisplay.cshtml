@model GraduationProject.ViewModels.TalentedUserViewModel
@{
    ViewBag.Title = "LinkDisplay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container col-lg-12 home">

    <!-- start profile picture -->

    <div class="avatar-upload">

        @using (Html.BeginForm("AvatarUpload", "TalentedUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div class="avatar-edit">
                <input type="file" id="imageUpload" name="file" value="Browse" accept=".png, .jpg, .jpeg" />
                <label for="imageUpload"></label>
            </div>
            <div class="avatar-preview">

                @Html.Action("DispalyAvatar");
            </div>

            <input class="btn btn-default" type="submit" value="Upload" />

        }




    </div>

    <!-- end profile picture -->
