    <button type="button" class="btn btn-primary col-sm-offset-5 col-sm-2" data-toggle="modal" data-target="#myModal">
        Manage Post
    </button>

    <!-- The Modal -->
    <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h2 class="modal-title text-center" id="exampleModalLabel">New Post</h2>
                </div>

                <!-- Modal body -->
                <div class="modal-body col-lg-12">
                    <div class=" row col-lg-6">
                        <div class="form-group col-lg-12">
                            <label for="title">Title:</label>
                            <input type="text" class="form-control " placeholder="Enter a title for the post" name="title" maxlength="50" required>
                        </div>

                        <div class="form-group col-lg-12">
                            <label for="description">Description:</label>
                            <textarea class="form-control " rows="6" placeholder="Say more about your post" name="psw" required></textarea>
                        </div>

                        <div class="form-group col-lg-12">
                            <label for="my-element">Tags:</label>
                            <input placeholder="Search & select Your Tags" type="text" id="my-element">
                        </div>

                    </div>

                    <div class=" row col-lg-6 mediaesec">

                        <!--
                                 <div>
