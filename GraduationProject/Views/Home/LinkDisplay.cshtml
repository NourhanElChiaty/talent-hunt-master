                                 </div>
                        -->

                        <div class="upload-post">
                            <form id="multiple">
                                <button type="button" class="btn btn-success fileup-btn">
                                    Select files
                                    <input type="file" id="upload-2" multiple="">
                                </button>

                                <a class="control-button btn btn-link" style="display: none" href="javascript:$.fileup('upload-2', 'upload', '*')">Upload all</a>
                                <a class="control-button btn btn-link" style="display: none" href="javascript:$.fileup('upload-2', 'remove', '*')">Remove all</a>

                                <div id="upload-2-queue" class="queue"></div>
                            </form>


                        </div>

                    </div>

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">CANCEL</button>
                    <button type="button" class="btn btn-primary publishbtn">PUBLISH</button>
                </div>

            </div>
        </div>
    </div>

