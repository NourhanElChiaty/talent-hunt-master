@model GraduationProject.ViewModels.TalentAcquisitionViewModel

@{
    ViewBag.Title = "EditProfile";
}
<link rel="stylesheet" href="~/Content/layout_style.css" />
<link rel="stylesheet" href="~/Content/animate.min.css" />



<div class="row">
    <div class="container col-lg-12 " style="padding:5%">
        <div class="row">

            <div class="main__form col-lg-12 col-md-10 col-sm-9" id="signin__form">
                @using (Html.BeginForm("UpdateProfile", "TalentAcquisition", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <div class="row">
                        <div class="form-group col-md-6 col-sm-12">
                            @Html.LabelFor(m => m.TA_FirstName)
                            @Html.TextBoxFor(m => m.TA_FirstName, new { @class = "form-control", @placeholder = "Your First Name", @required = "required", @maxlength = 15 })
                        </div>
                        <div class="form-group col-md-6 col-sm-12">
                            @Html.LabelFor(m => m.TA_LastName)
                            @Html.TextBoxFor(m => m.TA_LastName, new { @class = "form-control", @placeholder = "Your last name", @required = "required", @maxlength = 15 })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6 col-sm-12">
                            @Html.LabelFor(m => m.TA_Email)
                            @Html.TextBoxFor(m => m.TA_Email, new { @class = "form-control", @placeholder = "Your email" , @type="email", @required = "required" })

                        </div>

                        <div class="form-group col-md-6 col-sm-12">
                            @Html.LabelFor(m => m.TA_Nationality)
                            @Html.TextBoxFor(m => m.TA_Nationality, new {  @class = "form-control", @placeholder = "Your Nationality" ,@required = "required" })
                        </div>
                    </div>
                                                <div class="row">
                                                    

                                                    <div class="form-group col-md-6 col-sm-12">
                                                        @Html.LabelFor(m => m.TA_Company)
                                                        @Html.TextBoxFor(m => m.TA_Company, new { @class = "form-control", @placeholder = "Your Degree" ,@required = "required" })


                                                    </div>
                                                    <div class="form-group col-md-6 col-sm-10">

                                                        @Html.LabelFor(m => m.TA_CompanyDescription)
                                                        @Html.TextAreaFor(m => m.TA_CompanyDescription, new { id = "comment", @class = "form-control", @rows = 5 ,@required = "required" })
                                                    </div>
                                                </div>
                                              
                                                
                                              
                                               
                                                
                                                <div class="row">
                                                    <div class="form-group col-md-6 col-sm-10">

                                                        @Html.LabelFor(m => m.TA_Searching)
                                                        @Html.TextAreaFor(m => m.TA_Searching, new { id = "comment", @class = "form-control", @rows = 5 , @required = "required" })
                                                    </div>
                                                </div>

                                                    <div class="clearfix"></div>
                                                    <button type="submit" class="btn btn-default col-lg-offset-2 col-lg-8 submit">Submit</button>

                                                    <div class="clearfix"></div>

                }

            </div>
        </div>
    </div>

</div>

<div class="clearfix"></div>
<!-- end about me section -->
