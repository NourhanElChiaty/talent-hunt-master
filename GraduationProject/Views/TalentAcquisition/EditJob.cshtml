@model GraduationProject.ViewModels.TalentAcquisitionViewModel

@{
    ViewBag.Title = "EditJob";


}
<link rel="stylesheet" href="~/Content/layout_style.css" />
<link rel="stylesheet" href="~/Content/animate.min.css" />

<h2>EditJob</h2>



<div class="container col-lg-12">
    <div class="main__form col-lg-12 col-md-10 col-sm-9">
        @using (Html.BeginForm("UpdateJob", "TalentAcquisition", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.id)
                        <div class="form-group col-md-6 col-sm-12">
                <label for="comment">Job Title</label>
                @Html.TextBoxFor(m => m.JobTitle, new { @class = "form-control", @placeholder = "Enter Job Title" })

            </div>

            <div class="form-group col-md-6 col-sm-12">
                <label for="comment">Job Location</label>
                @Html.TextBoxFor(m => m.JobLocation, new { @class = "form-control", @placeholder = "Enter Job Location" })

            </div>

            <div class="form-group col-md-6 col-sm-12">
                <label for="comment">Job Category</label>
                @Html.TextBoxFor(m => m.JobCategory, new { @class = "form-control", @placeholder = "Enter Job Category" })


            </div>

            <div class="form-group col-md-6 col-sm-12">
                <label for="comment">Employment Type</label>
                @Html.TextBoxFor(m => m.EmploymentType, new { @class = "form-control", @placeholder = "Enter Employment Type" })


            </div>

            <div class="form-group col-md-6 col-sm-12">
                <label for="comment">Job Description</label>
                @Html.TextAreaFor(m => m.JobDescription, new { id = "comment", @class = "form-control", @rows = 5, @maxlength = 500, @minlength = 10 })


            </div>

            <div class="form-group col-md-6 col-sm-12">
                <label for="comment">Requirements</label>
                @Html.TextAreaFor(m => m.JobRequirements, new { id = "comment", @class = "form-control", @rows = 5, @maxlength = 500, @minlength = 10 })

            </div>
                                                <div class="form-group col-md-6 col-sm-12">
                                                    <label for="comment">Why Work In Our Company?</label>
                                                    @Html.TextAreaFor(m => m.Question, new { id = "comment", @class = "form-control", @rows = 5, @maxlength = 500, @minlength = 10 })

                                                </div>

                                                    <div class="clearfix"></div>
                                                    <button type="submit" class="btn btn-default col-sm-offset-2 col-sm-8">Save</button>
                                                    <div class="clearfix"></div>


        }
    </div>
</div>

@Html.Action("DisplayJob")