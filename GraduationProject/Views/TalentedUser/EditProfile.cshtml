@model GraduationProject.ViewModels.TalentedUserAboutmeViewModel
@{
    ViewBag.Title = "EditProfile";
}


<link rel="stylesheet" href="~/Content/layout_style.css" />
<link rel="stylesheet" href="~/Content/animate.min.css" />
<div class="row">
    <div class="container col-lg-12 ">
        <div class="row">

            <div class="main__form col-lg-12 col-md-10 col-sm-9" id="signin__form">
                @using (Html.BeginForm("UpdateProfile", "TalentedUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <div class="row">
                        <div class="form-group col-md-6 col-sm-12">
                            @Html.LabelFor(m => m.TU_FirstName)
                            @Html.TextBoxFor(m => m.TU_FirstName, new { @class = "form-control", @placeholder = "Your First Name" })
                        </div>
                        <div class="form-group col-md-6 col-sm-12">
                            @Html.LabelFor(m => m.TU_LastName)
                            @Html.TextBoxFor(m => m.TU_LastName, new { @class = "form-control", @placeholder = "Your last name" })
                        </div>
                    </div>
                                                <div class="row">
                                                    <div class="form-group col-md-6 col-sm-12">
                                                        @Html.LabelFor(m => m.TU_Email)
                                                        @Html.TextBoxFor(m => m.TU_Email, new { @class = "form-control", @placeholder = "Your email" })

                                                    </div>

                                                    <div class="form-group col-md-6 col-sm-12">
                                                        @Html.LabelFor(m => m.TU_DOB)
                                                        @Html.TextBoxFor(m => m.TU_DOB, new { id = "input-date", @class = "form-control", type = "date" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-md-6 col-sm-12">
                                                        @Html.LabelFor(m => m.TU_School)
                                                        @Html.TextBoxFor(m => m.TU_School, new { @class = "form-control", @placeholder = "Your School or University" })
                                                    </div>

                                                    <div class="form-group col-md-6 col-sm-12">
                                                        @Html.LabelFor(m => m.TU_Degree)
                                                        @Html.TextBoxFor(m => m.TU_Degree, new { @class = "form-control", @placeholder = "Your Degree" })


                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-md-6 col-sm-12">
                                                        @Html.LabelFor(m => m.TU_Language)
                                                        @Html.TextBoxFor(m => m.TU_Language, new { @class = "form-control", @placeholder = "Your Language" })
                                                    </div>

                                                    <div class="form-group col-md-6 col-sm-12">
                                                        @Html.LabelFor(m => m.TU_ProfiencyLevel)
                                                        @Html.TextBoxFor(m => m.TU_ProfiencyLevel, new { @class = "form-control", @placeholder = "Your Proficiency Level" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-md-6 col-sm-12">
                                                        @Html.LabelFor(m => m.TU_Gender)

                                                        @Html.RadioButtonFor(m => m.TU_Gender, "Male", new { @class = "radio-inline" }) Male
                                                        @Html.RadioButtonFor(m => m.TU_Gender, "Female", new { @class = "radio-inline" }) Female

                                                    </div>

                                                    <div class="form-group col-md-6 col-sm-12">
                                                        @Html.LabelFor(m => m.TU_Nationality)
                                                        @Html.TextBoxFor(m => m.TU_Nationality, new { @class = "form-control", @placeholder = "Your Nationality" })


                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-md-6 col-sm-10">

                                                        @Html.LabelFor(m => m.TU_SelfDescription)
                                                        @Html.TextAreaFor(m => m.TU_SelfDescription, new { id = "comment", @class = "form-control", @rows = 5 })
                                                    </div>

                                                    <div class="form-group col-md-6 col-sm-10">
                                                        @Html.LabelFor(m => m.TU_Skills)
                                                        @Html.TextAreaFor(m => m.TU_Skills, new { id = "comment", @class = "form-control", @rows = 5 })


                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-md-6 col-sm-12">
                                                        @Html.LabelFor(m => m.TalentedUserExperience.Position)
                                                        @Html.TextBoxFor(m => m.TalentedUserExperience.Position, new { @class = "form-control", @placeholder = "Your School or University" })
                                                    </div>

                                                    <div class="form-group col-md-6 col-sm-12">
                                                        @Html.LabelFor(m => m.TalentedUserExperience.Company)
                                                        @Html.TextBoxFor(m => m.TalentedUserExperience.Company, new { @class = "form-control", @placeholder = "Your Degree" })


                                                    </div>
                                                </div>
                                                    <div class="row">
                                                        <div class="form-group col-md-6 col-sm-10">

                                                            @Html.LabelFor(m => m.TalentedUserExperience.Skills)
                                                            @Html.TextAreaFor(m => m.TalentedUserExperience.Skills, new { id = "comment", @class = "form-control", @rows = 5 })
                                                        </div>
                                                    </div>

                                                <div class="clearfix"></div>
                                                <button type="submit" class="btn btn-default col-lg-offset-2 col-lg-8 submit">Submit</button>

                                                <div class="clearfix"></div>

                }

            </div>
        </div>
    </div>

</div>

<div class="clearfix"></div>
<!-- end about me section -->
