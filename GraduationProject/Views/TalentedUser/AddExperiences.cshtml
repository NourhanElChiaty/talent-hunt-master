@model GraduationProject.ViewModels.TalentedUserAboutmeViewModel
@{     Layout = "";
}
<link rel="stylesheet" href="~/Content/layout_style.css" />
<link rel="stylesheet" href="~/Content/animate.min.css" />
    <div class="container col-lg-12">
        <div class="main__form">
            <div class="exp">
                <div class="work__section">
                    <h2 class="col-lg-offset-5">-Work-</h2>
                    @using (Html.BeginForm("AddExperiences", "TalentedUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div id="form_div">
                            <div class="row">
                                <div class="form-group col-md-6 col-sm-12">
                                    @Html.LabelFor(m => m.TalentedUserExperience.Position)
                                    @Html.TextBoxFor(m => m.TalentedUserExperience.Position, new { @class = "form-control", @placeholder = "Your School or University" })
                                </div>

                                <div class="form-group col-md-6 col-sm-12">
                                    @Html.LabelFor(m => m.TalentedUserExperience.Company)
                                    @Html.TextBoxFor(m => m.TalentedUserExperience.Company, new { @class = "form-control", @placeholder = "Your Degree" })


                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6 col-sm-10">

                                    @Html.LabelFor(m => m.TalentedUserExperience.Skills)
                                    @Html.TextAreaFor(m => m.TalentedUserExperience.Skills, new { id = "comment", @class = "form-control", @rows = 5 })
                                </div>
                            </div>
                        </div>

                    <hr>
                    <div class="clearfix"></div>

                
           
            <button class="btn btn-default add-exp">Add</button>
            <div class="clearfix"></div>

            
                    }
            </div>
        </div>
    </div>
        </div>
    