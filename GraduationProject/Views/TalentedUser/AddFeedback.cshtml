@model GraduationProject.ViewModels.TalentedUserViewModel

@{
    ViewBag.Title = "AddFeedback";
}

<link rel="stylesheet" href="~/Content/layout_style.css" />
<link rel="stylesheet" href="~/Content/animate.min.css" />
 <!-- start feedback section -->
<h2>Add Feedback</h2>

    <div class="text__feedback">

@using (Html.BeginForm("AddFeedback", "TalentedUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
        <div class="form-group">
            
            @Html.TextAreaFor(m => m.Message, new { id = "comment", @class = "form-control", @rows = 5, @maxlength = 500, @minlength = 10 })


        </div>
        <button type="submit" class="btn btn-default submit">Send</button>
}
      
    </div>
